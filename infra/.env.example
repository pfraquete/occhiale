# ============================================
# OCCHIALE VPS — Environment Variables
# Copy to .env and fill in values
# ============================================

# Evolution API — Authentication key for API access
# Generate a secure random string: openssl rand -hex 32
EVOLUTION_API_KEY=

# Evolution API — Public URL (your VPS domain or IP)
# Example: https://api.yourdomain.com or http://YOUR_VPS_IP:8080
EVOLUTION_SERVER_URL=

# PostgreSQL for Evolution API (separate from Supabase)
# Generate a secure password: openssl rand -base64 24
POSTGRES_EVOLUTION_PASSWORD=

# Meilisearch — Master key for admin access
# Generate a secure random string: openssl rand -hex 32
MEILISEARCH_MASTER_KEY=
