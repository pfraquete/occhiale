# ============================================
# OCCHIALE VPS â€” Environment Variables
# Copy to .env and fill in values
# ============================================

# ------------------------------------------
# Domains (used by Caddy for auto SSL)
# ------------------------------------------
# Subdomain for Evolution API
EVOLUTION_DOMAIN=api.yourdomain.com
# Subdomain for Meilisearch
MEILISEARCH_DOMAIN=search.yourdomain.com

# ------------------------------------------
# Evolution API
# ------------------------------------------
# Authentication key for API access
# Generate: openssl rand -hex 32
EVOLUTION_API_KEY=

# Public URL (must match EVOLUTION_DOMAIN with https://)
EVOLUTION_SERVER_URL=https://api.yourdomain.com

# ------------------------------------------
# PostgreSQL for Evolution API (separate from Supabase)
# ------------------------------------------
# Generate a secure password: openssl rand -base64 24
POSTGRES_EVOLUTION_PASSWORD=

# ------------------------------------------
# Redis
# ------------------------------------------
# Optional password for Redis (recommended in production)
# Generate: openssl rand -hex 16
REDIS_PASSWORD=

# ------------------------------------------
# Meilisearch
# ------------------------------------------
# Master key for admin access
# Generate: openssl rand -hex 32
MEILISEARCH_MASTER_KEY=
